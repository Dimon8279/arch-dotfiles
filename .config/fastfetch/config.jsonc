      "type": "command",
      "key": "OS Age",
      "text": "birth=$(stat -c %W / 2>/dev/null || stat -f %B / 2>/dev/null); if [ -z \"$birth\" ] || [ \"$birth\" -eq 0 ]; then birth=$(find / -maxdepth 0 -printf '%T@' 2>/dev/null); fi; current=$(date +%s); days=$(( (current - birth) / 86400 )); echo \"$days days\""
    },
